#include <iostream>
using namespace std;

int main() {
    double nota, somaNotas = 0.0;
    int contador = 0;

    cout << "Digite as notas dos alunos (digite uma nota negativa para encerrar):" << endl;

    while (true) {
        cout << "Digite uma nota: ";
        cin >> nota;

        if (nota < 0) {

            if (contador > 0) {
                double media = somaNotas / contador;
                cout << "A média das notas válidas é: " << media << endl;
            } else {
                cout << "Nenhuma nota válida foi inserida." << endl;
            }
            return 0;
        }

        somaNotas += nota;
        contador++;
    }

    return 0;
}
