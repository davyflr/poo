int main(){
    int soma = 0;

    for(int i = 1; i <= 50; i++){

        if(i % 2 == 0){
            soma += i;
            cout << i << endl;
        }
    }

    cout << "A soma de todos os números pares entre 1 e 50 é: " << soma << endl;

    return 0;

}
